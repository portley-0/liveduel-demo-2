{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/*"
      ],
      "hardhat/*": [
        "contracts/*"
      ]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "isolatedModules": true,
    "allowJs": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app/**/*",
    "contracts/**/*",
    "./scripts/**/*",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "./test",
    "./typechain-types"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
}