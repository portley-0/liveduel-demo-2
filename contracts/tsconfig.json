{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "@utilities/*": ["contracts/icm-contracts/utilities/*"],
      "@ictt/*": ["contracts/icm-contracts/ictt/*"],
      "@teleporter/*": ["contracts/icm-contracts/teleporter/*"]
    }
  },
  "typeRoots": ["node_modules/@types"],
  "include": [
    "contracts/**/*",
    "scripts/**/*",
    "test/**/*",
    "hardhat.config.ts",
    "./node_modules/.pnpm/@nomiclabs+hardhat-ethers@*/node_modules/@nomiclabs/hardhat-ethers/src/internal/type-extensions.d.ts"
  ]
}
